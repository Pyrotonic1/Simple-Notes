{
  "schemaVersion": 1,
  "id": "recordium",
  "version": "${version}",

  "name": "Recordium",
  "description": "A mod for recording things, like notes.",
  "authors": ["Pyrotonic"],
  "contact": {
    "homepage": "https://modrinth.com/project/simple-notes",
    "sources": "https://github.com/Pyrotonic1/simple-notes",
    "issues": "https://github.com/Pyrotonic1/simple-notes/issues"
  },

  "license": "LGPL-2.1-only",
  "icon": "assets/recordium/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": ["org.pyrotonic.recordium.client.RecordiumClient"],
    "main": ["org.pyrotonic.recordium.Recordium"]
  },


  "mixins": [
    "recordium.mixins.json",
    {
      "config": "recordium.client.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=0.16.9",
    "fabric": "0.111.0+1.21.4",
    "minecraft": "1.21.4"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/H7WbRGDwJJ"
      },
      "id": "recordium",
      "name": "Recordium",
      "icon": "assets/recordium/icon.png"
    }
  }
}
